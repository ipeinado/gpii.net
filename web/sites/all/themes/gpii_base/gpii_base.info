regions[topbar_second]           = 'Top Bar Second'
regions[header_first]            = 'Header First'
regions[header_second]           = 'Header Second'
regions[menu_first]              = 'Menu First'
regions[menu_second]             = 'Menu Second'
regions[hero]                    = 'Hero'
regions[sidebar_first]           = 'Sidebar First'
regions[sidebar_second]          = 'Sidebar Second'
regions[highlighted]             = 'Highlighted'
regions[help]                    = 'Help'
regions[content_preface]         = 'Content Preface'
regions[content]                 = 'Content'
regions[content_postscript]      = 'Content Postscript'
regions[secondary_first]         = 'Secondary Content First'
regions[secondary_second]        = 'Secondary Content Second'
regions[secondary_third]         = 'Secondary Content Third'
regions[secondary_fourth]        = 'Secondary Content Fourth'
regions[tertiary_first]          = 'Tertiary Content First'
regions[tertiary_second]         = 'Tertiary Content Second'
regions[tertiary_third]          = 'Tertiary Content Third'
regions[tertiary_fourth]         = 'Tertiary Content Fourth'
regions[footer_first]            = 'Footer First'
