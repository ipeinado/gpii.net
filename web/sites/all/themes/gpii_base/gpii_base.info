regions[footer_fifth]            = 'Footer Fifth'
regions[fine_print_first]        = 'Fine Print First'
regions[fine_print_second]       = 'Fine Print Second'
regions[fine_print_third]        = 'Fine Print Third'
regions[fine_print_fourth]       = 'Fine Print Fourth'


;;;;;;;;;;;;;;;;;;;;;
;; Theme Settings
;;;;;;;;;;;;;;;;;;;;;

; Drupal
; --------------
settings[toggle_slogan] = 0

; Tables
; --------------
settings[bootstrap_table_hover] = 0

; Navbar
; --------------
settings[bootstrap_navbar_position] = 'static-top'

; Region Wells
; --------------
settings[bootstrap_region_well-sidebar_first] = ''

; Forms
; --------------
settings[bootstrap_forms_smart_descriptions] = 0

; Advanced
; --------------
settings[bootstrap_cdn] = ''


;;;;;;;;;;;;;;;;;;;;;
;; Stylesheets
;;;;;;;;;;;;;;;;;;;;;

stylesheets[all][] = css/gpii_base.css


;;;;;;;;;;;;;;;;;;;;;
;; Scripts
;;;;;;;;;;;;;;;;;;;;;

scripts[] = 'bootstrap/bootstrap/assets/javascripts/bootstrap.min.js'
scripts[] = 'js/jquery.smartmenus.min.js'
scripts[] = 'js/jquery.smartmenus.bootstrap.min.js'
scripts[] = 'js/jquery-watch.min.js'
scripts[] = 'js/gpii_base.js'
